<mapper namespace="com.wenqi.demo.dao.RoleDao" >

    <select id="findByEmployee" resultType="com.wenqi.demo.domain.Role" parameterType="com.wenqi.demo.domain.Employee">

        SELECT r.id,r.role_name FROM t_role r
        INNER JOIN t_employee_role er ON r.id=er.role_id
        INNER JOIN employee e ON er.employee_number=e.number
        WHERE e.number=#{number};
    </select>

